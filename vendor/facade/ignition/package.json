{
    "private": true,
    "scripts": {
        "dev": "webpack --mode development --watch",
        "build": "NODE_ENV=production webpack --mode production",
        "format": "prettier --write 'resources/**/*.{css,js,ts,vue}'"
    },
    "dependencies": {
        "vuex": "^3.6.0",
        "vue-router": "^3.4.9",
        "vuetify": "^2.4.2"
    },
    "devDependencies": {
        "axios": "^0.19",
        "babel-core": "^7.0.0-bridge.0",
        "babel-eslint": "^10.1.0",
        "babel-jest": "^26.6.3",
        "cross-env": "^7.0.3",
        "eslint": "^7.17.0",
        "eslint-plugin-vue": "^7.4.1",
        "jquery": "^3.2",
        "laravel-mix": "^5.0.9",
        "lodash": "^4.17.19",
        "popper.js": "^1.12",
        "resolve-url-loader": "^2.3.1",
        "sass": "^1.32.2",
        "sass-loader": "^8.0.0",
        "underscore": "^1.12.0",
        "vue": "^2.5.17",
        "vue-jest": "^3.0.7",
        "vue-notification": "^1.3.20",
        "vue-slicksort": "^1.1.3",
        "vue-template-compiler": "^2.6.10"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged && yarn build && git add resources/compiled/ignition.js"
        }
    },
    "lint-staged": {
        "linters": {
            "*.{css,js,ts,vue}": [
                "yarn format",
                "git add"
            ]
        },
        "ignore": [
            "resources/compiled/**/*"
        ]
    },
    "jest": {
        "testPathIgnorePatterns": [
            "/node_modules/",
            "/__helpers__/"
        ]
    }
}
